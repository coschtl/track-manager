<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/line_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:contentDescription="Tracks" />

    <TextView
        android:id="@+id/line_head"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/line_icon"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#CCCCCC"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/additional_icon_head"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignRight="@id/line_head" />

    <TextView
        android:id="@+id/line_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_head"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/line_icon"
        android:ellipsize="marquee"
        android:paddingLeft="15dp"
        android:textColor="#CCCCCC" />

    <ImageView
        android:id="@+id/additional_icon"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_below="@id/line_icon"
        android:layout_alignParentBottom="@id/line_icon" />

</RelativeLayout>
